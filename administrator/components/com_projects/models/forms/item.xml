<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_projects/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="sectionID"
                type="Section"
                label="COM_PROJECTS_FILTER_SECTION"
                description="COM_PROJECTS_HEAD_TITLE_SECTION_DESC"
                required="true"
                class="input-xlarge"
        />
        <field
                name="application"
                type="list"
                label="COM_PROJECTS_HEAD_ITEM_APPLICATION"
                required="true"
                description="COM_PROJECTS_HEAD_ITEM_APPLICATION_DESC"
                class="input-xlarge">
            <option value="contract">COM_PROJECTS_HEAD_ITEM_APPLICATION_CONTRACT</option>
            <option value="app1">COM_PROJECTS_HEAD_ITEM_APPLICATION_APP1</option>
            <option value="app2">COM_PROJECTS_HEAD_ITEM_APPLICATION_APP2</option>
            <option value="app3">COM_PROJECTS_HEAD_ITEM_APPLICATION_APP3</option>
            <option value="app4">COM_PROJECTS_HEAD_ITEM_APPLICATION_APP4</option>
        </field>
        <field
                name="title_ru"
                type="text"
                label="COM_PROJECTS_HEAD_ITEM_TITLE_RU"
                description="COM_PROJECTS_HEAD_ITEM_TITLE_RU_DESC"
                hint="COM_PROJECTS_HEAD_ITEM_TITLE_RU_HINT"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="title_en"
                type="text"
                label="COM_PROJECTS_HEAD_ITEM_TITLE_EN"
                description="COM_PROJECTS_HEAD_ITEM_TITLE_EN_DESC"
                hint="COM_PROJECTS_HEAD_ITEM_TITLE_EN_HINT"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="unit"
                type="list"
                label="COM_PROJECTS_HEAD_ITEM_UNIT"
                description="COM_PROJECTS_HEAD_ITEM_UNIT_DESC"
                class="inputbox"
                default="piece"
        >
            <option value="piece">COM_PROJECTS_HEAD_ITEM_UNIT_PIECE</option>
            <option value="sqm">COM_PROJECTS_HEAD_ITEM_UNIT_SQM</option>
            <option value="kit">COM_PROJECTS_HEAD_ITEM_UNIT_KIT</option>
            <option value="pair">COM_PROJECTS_HEAD_ITEM_UNIT_PAIR</option>
            <option value="sym">COM_PROJECTS_HEAD_ITEM_UNIT_SYM</option>
            <option value="pm">COM_PROJECTS_HEAD_ITEM_UNIT_PM</option>
            <option value="days">COM_PROJECTS_HEAD_ITEM_UNIT_DAYS</option>
            <option value="hours">COM_PROJECTS_HEAD_ITEM_UNIT_HOURS</option>
            <option value="nights">COM_PROJECTS_HEAD_ITEM_UNIT_NIGHTS</option>
            <option value="4h">COM_PROJECTS_HEAD_ITEM_UNIT_4H</option>
            <option value="1d1sqm">COM_PROJECTS_HEAD_ITEM_UNIT_1D1SQM</option>
            <option value="1qsm1p">COM_PROJECTS_HEAD_ITEM_UNIT_1SQM1P</option>
            <option value="1s1qsm">COM_PROJECTS_HEAD_ITEM_UNIT_1S1SQM</option>
            <option value="view">COM_PROJECTS_HEAD_ITEM_UNIT_VIEW</option>
            <option value="1pd">COM_PROJECTS_HEAD_ITEM_UNIT_1PD</option>
            <option value="ppl">COM_PROJECTS_HEAD_ITEM_UNIT_PPL</option>
            <option value="zvqm">COM_PROJECTS_HEAD_ITEM_UNIT_ZVQM</option>
        </field>
        <field
                name="unit_2"
                type="list"
                label="COM_PROJECTS_HEAD_ITEM_UNIT_TWO"
                description="COM_PROJECTS_HEAD_ITEM_UNIT_TWO_DESC"
                class="inputbox"
                default=""
        >
            <option value="">COM_PROJECTS_HEAD_ITEM_UNIT_TWO_NOT_USE</option>
            <option value="piece">COM_PROJECTS_HEAD_ITEM_UNIT_PIECE</option>
            <option value="sqm">COM_PROJECTS_HEAD_ITEM_UNIT_SQM</option>
            <option value="kit">COM_PROJECTS_HEAD_ITEM_UNIT_KIT</option>
            <option value="pair">COM_PROJECTS_HEAD_ITEM_UNIT_PAIR</option>
            <option value="sym">COM_PROJECTS_HEAD_ITEM_UNIT_SYM</option>
            <option value="pm">COM_PROJECTS_HEAD_ITEM_UNIT_PM</option>
            <option value="days">COM_PROJECTS_HEAD_ITEM_UNIT_DAYS</option>
            <option value="hours">COM_PROJECTS_HEAD_ITEM_UNIT_HOURS</option>
            <option value="nights">COM_PROJECTS_HEAD_ITEM_UNIT_NIGHTS</option>
            <option value="4h">COM_PROJECTS_HEAD_ITEM_UNIT_4H</option>
            <option value="1d1sqm">COM_PROJECTS_HEAD_ITEM_UNIT_1D1SQM</option>
            <option value="1qsm1p">COM_PROJECTS_HEAD_ITEM_UNIT_1SQM1P</option>
            <option value="1s1qsm">COM_PROJECTS_HEAD_ITEM_UNIT_1S1SQM</option>
            <option value="view">COM_PROJECTS_HEAD_ITEM_UNIT_VIEW</option>
            <option value="1pd">COM_PROJECTS_HEAD_ITEM_UNIT_1PD</option>
            <option value="ppl">COM_PROJECTS_HEAD_ITEM_UNIT_PPL</option>
            <option value="zvqm">COM_PROJECTS_HEAD_ITEM_UNIT_ZVQM</option>
        </field>
        <field
                name="is_sq"
                type="radio"
                class="btn-group btn-group-yesno"
                default="0"
                label="COM_PROJECTS_HEAD_ITEM_IS_SQ"
                description="COM_PROJECTS_HEAD_ITEM_IS_SQ_DESC"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="in_stat"
                type="radio"
                class="btn-group btn-group-yesno"
                default="1"
                label="COM_PROJECTS_HEAD_ITEM_IN_STAT"
                description="COM_PROJECTS_HEAD_ITEM_IN_STAT_DESC"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="is_factor"
            type="list"
            label="COM_PROJECTS_HEAD_CONTRACT_FACTOR"
            description="COM_PROJECTS_HEAD_CONTRACT_FACTOR_DESC"
            class="inputbox"
            default="0">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="is_markup"
            type="list"
            label="COM_PROJECTS_HEAD_ITEM_IS_MARKUP"
            description="COM_PROJECTS_HEAD_ITEM_IS_MARKUP_DESC"
            class="inputbox"
            default="0">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
    <fieldset name="amounts">
        <field
                name="price_rub"
                type="text"
                label="COM_PROJECTS_HEAD_ITEM_PRICE_RUB"
                description="COM_PROJECTS_HEAD_ITEM_PRICE_RUB_DESC"
                hint="COM_PROJECTS_HEAD_ITEM_PRICE_RUB_HINT"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="price_usd"
                type="text"
                label="COM_PROJECTS_HEAD_ITEM_PRICE_USD"
                description="COM_PROJECTS_HEAD_ITEM_PRICE_USD_DESC"
                hint="COM_PROJECTS_HEAD_ITEM_PRICE_USD_HINT"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="price_eur"
                type="text"
                label="COM_PROJECTS_HEAD_ITEM_PRICE_EUR"
                description="COM_PROJECTS_HEAD_ITEM_PRICE_EUR_DESC"
                hint="COM_PROJECTS_HEAD_ITEM_PRICE_EUR_HINT"
                autocomplete="off"
                class="input-xlarge"
        />
    </fieldset>
    <fieldset name="columns" label="COM_PROJECTS_HEAD_ITEM_COLUMN1_LABEL">
        <field
                name="column_1"
                type="integer"
                label="COM_PROJECTS_HEAD_ITEM_COLUMN_1"
                description="COM_PROJECTS_HEAD_ITEM_COLUMN_1_DESC"
                default="0"
                step="5"
                first="0"
                last="100"
        />
        <field
                name="column_2"
                type="integer"
                label="COM_PROJECTS_HEAD_ITEM_COLUMN_2"
                description="COM_PROJECTS_HEAD_ITEM_COLUMN_2_DESC"
                default="50"
                step="5"
                first="0"
                last="100"
        />
        <field
                name="column_3"
                type="integer"
                label="COM_PROJECTS_HEAD_ITEM_COLUMN_3"
                description="COM_PROJECTS_HEAD_ITEM_COLUMN_3_DESC"
                default="100"
                step="5"
                first="0"
                last="100"
        />
    </fieldset>
</form>