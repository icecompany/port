<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_projects/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="contractID"
                type="Contract"
                label="COM_PROJECTS_HEAD_PAYMENT_CONTRACT"
                description="COM_PROJECTS_HEAD_PAYMENT_CONTRACT_DESC"
                autocomplete="off"
                class="x2"
        />
        <field
                name="catalogID"
                type="Catalog"
                label="COM_PROJECTS_HEAD_CONTRACT_STAND_NUMBER"
                description="COM_PROJECTS_HEAD_CONTRACT_STAND_NUMBER"
                autocomplete="off"
                class="x2"
                onchange="setSquare()"
        />
        <field
                name="itemID"
                type="Item"
                label="COM_PROJECTS_MENU_ITEM"
                description="COM_PROJECTS_FILTER_ITEM"
                autocomplete="off"
                class="x2"
        />
        <field
                name="sq"
                type="hidden"
                label="COM_PROJECTS_HEAD_ITEM_HEAD_SQUARE"
                description="COM_PROJECTS_HEAD_ITEM_HEAD_SQUARE_DESC"
                autocomplete="off"
                class="x2"
        />
        <field
                name="brk1"
                type="spacer"
                label=""
                />
        <field
                name="tip"
                type="list"
                label="COM_PROJECTS_HEAD_CONTRACT_STAND_TYPE"
                description="COM_PROJECTS_HEAD_CONTRACT_STAND_TYPE_DESC"
                class="x2"
                required="true"
                size="1"
        >
            <option value="0">COM_PROJECTS_HEAD_CONTRACT_STAND_TYPE_0</option>
            <option value="1">COM_PROJECTS_HEAD_CONTRACT_STAND_TYPE_1</option>
            <option value="2">COM_PROJECTS_HEAD_CONTRACT_STAND_TYPE_2</option>
            <option value="3">COM_PROJECTS_HEAD_CONTRACT_STAND_TYPE_3</option>
            <option value="4">COM_PROJECTS_HEAD_CONTRACT_STAND_TYPE_4</option>
        </field>
        <field
                name="freeze"
                type="text"
                label="COM_PROJECTS_HEAD_CONTRACT_STAND_FREEZE"
                description="COM_PROJECTS_HEAD_CONTRACT_STAND_FREEZE_DESC"
                hint="COM_PROJECTS_HEAD_CONTRACT_STAND_FREEZE_HINT"
                autocomplete="off"
                class="x2"
        />
        <field
                name="comment"
                type="textarea"
                rows="5"
                label="COM_PROJECTS_HEAD_CONTRACT_STAND_COMMENT"
                description="COM_PROJECTS_HEAD_CONTRACT_STAND_COMMENT_DESC"
                autocomplete="off"
                class="x2"
        />
        <field
                name="status"
                type="list"
                label="COM_PROJECTS_HEAD_CONTRACT_STAND_STATUS"
                description="COM_PROJECTS_HEAD_CONTRACT_STAND_STATUS_DESC"
                hint="COM_PROJECTS_HEAD_CONTRACT_STAND_COMMENT_HINT"
                class="x2"
                required="true"
                size="1"
        >
            <option value="0">COM_PROJECTS_HEAD_CONTRACT_STAND_STATUS_0</option>
            <option value="2">COM_PROJECTS_HEAD_CONTRACT_STAND_STATUS_2</option>
            <option value="3">COM_PROJECTS_HEAD_CONTRACT_STAND_STATUS_3</option>
            <option value="4">COM_PROJECTS_HEAD_CONTRACT_STAND_STATUS_4</option>
            <option value="1">COM_PROJECTS_HEAD_CONTRACT_STAND_STATUS_1</option>
        </field>
        <field
                name="scheme"
                type="filelist"
                label="COM_PROJECTS_HEAD_CONTRACT_STAND_SCHEME"
                description="COM_PROJECTS_HEAD_CONTRACT_STAND_SCHEME_DESC"
                class="x2"
                filter="jpg|jpeg|png|gif|bmp|tiff"
                hide_default="true"
                default=""
                onchange="setImg()"
        />
        <field
                name="brk2"
                type="spacer"
                label=""
        />
        <field
                name="show"
                type="radio"
                class="btn-group btn-group-yesno"
                default="1"
                label="COM_PROJECTS_HEAD_CONTRACT_STAND_SHOW"
                description="COM_PROJECTS_HEAD_CONTRACT_STAND_SHOW_DESC"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
</form>