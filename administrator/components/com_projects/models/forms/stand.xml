<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_projects/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="contractID"
                type="Contract"
                label="COM_PROJECTS_HEAD_TODO_CONTRACT"
                description="COM_PROJECTS_HEAD_TODO_CONTRACT_DESC"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="number"
                type="text"
                label="COM_PROJECTS_HEAD_CONTRACT_STAND_NUMBER"
                description="COM_PROJECTS_HEAD_CONTRACT_STAND_NUMBER_DESC"
                autocomplete="off"
                class="input-xlarge"
                validate="Standnumber"
        />
        <field
                name="freeze"
                type="text"
                label="COM_PROJECTS_HEAD_CONTRACT_STAND_FREEZE"
                description="COM_PROJECTS_HEAD_CONTRACT_STAND_FREEZE_DESC"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="tip"
                type="list"
                label="COM_PROJECTS_HEAD_CONTRACT_STAND_TYPE"
                description="COM_PROJECTS_HEAD_CONTRACT_STAND_TYPE_DESC"
                class="inputbox"
                required="true"
                size="1"
        >
            <option value="0">COM_PROJECTS_HEAD_CONTRACT_STAND_TYPE_0</option>
            <option value="2">COM_PROJECTS_HEAD_CONTRACT_STAND_TYPE_2</option>
            <option value="3">COM_PROJECTS_HEAD_CONTRACT_STAND_TYPE_3</option>
            <option value="1">COM_PROJECTS_HEAD_CONTRACT_STAND_TYPE_1</option>
        </field>
        <field
                name="comment"
                type="text"
                label="COM_PROJECTS_HEAD_CONTRACT_STAND_COMMENT"
                description="COM_PROJECTS_HEAD_CONTRACT_STAND_COMMENT_DESC"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="status"
                type="list"
                label="COM_PROJECTS_HEAD_CONTRACT_STAND_STATUS"
                description="COM_PROJECTS_HEAD_CONTRACT_STAND_STATUS_DESC"
                class="inputbox"
                required="true"
                size="1"
        >
            <option value="0">COM_PROJECTS_HEAD_CONTRACT_STAND_STATUS_0</option>
            <option value="2">COM_PROJECTS_HEAD_CONTRACT_STAND_STATUS_2</option>
            <option value="3">COM_PROJECTS_HEAD_CONTRACT_STAND_STATUS_3</option>
            <option value="4">COM_PROJECTS_HEAD_CONTRACT_STAND_STATUS_4</option>
            <option value="1">COM_PROJECTS_HEAD_CONTRACT_STAND_STATUS_1</option>
        </field>
        <field
                name="scheme"
                type="filelist"
                label="COM_PROJECTS_HEAD_CONTRACT_STAND_SCHEME"
                description="COM_PROJECTS_HEAD_CONTRACT_STAND_SCHEME_DESC"
                class="inputbox"
                directory="images/stands"
                default=""
        />
    </fieldset>
</form>