<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_projects/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="prjID"
                type="Project"
                label="COM_PROJECTS_HEAD_TITLE_DESC"
                description="COM_PROJECTS_HEAD_TITLE_DESC"
                hint="COM_PROJECTS_HEAD_TITLE_DESC"
                class="input-xlarge"
        />
        <field
                name="path"
                type="filelist"
                label="COM_PROJECTS_HEAD_FILE"
                description="COM_PROJECTS_HEAD_FILE_DESC"
                directory="images/plans"
                class="input-xlarge"
        />
        <field
                name="state"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                class="inputbox"
                size="1"
                default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>
</form>