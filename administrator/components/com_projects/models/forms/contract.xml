<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_projects/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="prjID"
                type="Project"
                label="COM_PROJECTS_HEAD_CONTRACT_PROJECT"
                description="COM_PROJECTS_HEAD_CONTRACT_PROJECT_DESC"
                required="true"
                autocomplete="off"
                class="x2"
        />
        <field
                name="expID"
                type="Exhibitor"
                label="COM_PROJECTS_HEAD_CONTRACT_EXPONENT"
                description="COM_PROJECTS_HEAD_CONTRACT_EXPONENT_DESC"
                required="true"
                autocomplete="off"
                class="x2"
        />
        <field
                name="isCoExp"
                type="radio"
                class="btn-group btn-group-yesno"
                default="0"
                label="COM_PROJECTS_HEAD_CONTRACT_IS_CO_EXP"
                description="COM_PROJECTS_HEAD_CONTRACT_IS_CO_EXP_DESC"
                onclick="setNumber()"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="parentID"
                type="Exhibitor"
                label="COM_PROJECTS_HEAD_CONTRACT_PARENT"
                description="COM_PROJECTS_HEAD_CONTRACT_PARENT_DESC"
                autocomplete="off"
                class="x2"
        />
        <field
                name="children"
                type="Children"
                label="COM_PROJECTS_HEAD_CONTRACT_CHILDREN"
                description="COM_PROJECTS_HEAD_CONTRACT_CHILDREN_DESC"
                multiple="true"
                autocomplete="off"
                class="x2"
        />
        <field
                name="managerID"
                type="user"
                label="COM_PROJECTS_HEAD_CONTRACT_MANAGER"
                description="COM_PROJECTS_HEAD_CONTRACT_MANAGER_DESC"
                autocomplete="off"
                class="x2"
        />
        <field
                name="dat"
                type="calendar"
                label="COM_PROJECTS_HEAD_CONTRACT_DATE_DESC"
                description="COM_PROJECTS_HEAD_CONTRACT_DATE_DESC"
                autocomplete="off"
                format="%d.%m.%Y"
                class="x2"
        />
        <field
                name="currency"
                type="list"
                label="COM_PROJECTS_HEAD_CONTRACT_CURRENCY"
                description="COM_PROJECTS_HEAD_CONTRACT_CURRENCY_DESC"
                autocomplete="off"
                class="x2">
            <option value="rub">COM_PROJECTS_HEAD_ITEM_PRICE_RUB</option>
            <option value="usd">COM_PROJECTS_HEAD_ITEM_PRICE_USD</option>
            <option value="eur">COM_PROJECTS_HEAD_ITEM_PRICE_EUR</option>
        </field>
        <field
                name="status"
                type="Contractstatus"
                label="COM_PROJECTS_HEAD_CONTRACT_STATUS"
                description="COM_PROJECTS_HEAD_CONTRACT_STATUS_DESC"
                autocomplete="off"
                required="true"
                default="-1"
                class="x2">
        </field>
        <field
                name="number"
                type="text"
                label="COM_PROJECTS_HEAD_CONTRACT_NUMBER"
                description="COM_PROJECTS_HEAD_CONTRACT_NUMBER_DESC"
                hint="COM_PROJECTS_HEAD_CONTRACT_NUMBER_HINT"
                autocomplete="off"
                class="x2"
        />
        <field
                name="number_free"
                type="text"
                label="COM_PROJECTS_HEAD_CONTRACT_STAND_NUMBER_FREE"
                description="COM_PROJECTS_HEAD_CONTRACT_STAND_NUMBER_FREE_DESC"
                autocomplete="off"
                class="x2"
        />
        <field
                name="payerID"
                type="exhibitor"
                label="COM_PROJECTS_HEAD_CONTRACT_PAYER"
                description="COM_PROJECTS_HEAD_CONTRACT_PAYER_DESC"
                default=""
                class="x2"
        >
                <option value="">COM_PROJECTS_HEAD_CONTRACT_PAYER_HINT</option>
        </field>
        <field
                name="activities"
                type="Activity"
                multiple="true"
                label="COM_PROJECTS_MENU_IN_CONTRACT_ACTIVITIES"
                description="COM_PROJECTS_MENU_ACTIVITIES"
                class="input-xlarge"
        />
        <field
                name="rubrics"
                type="Rubric"
                label="COM_PROJECTS_HEAD_CONTRACT_RUBRICS"
                description="COM_PROJECTS_HEAD_CONTRACT_RUBRICS_DESC"
                multiple="true"
                class="x2"
        />
    </fieldset>
    <fieldset name="files">
        <field
                name="doc_status"
                type="list"
                label="COM_PROJECTS_HEAD_CONTRACT_DOC_STATUS"
                description="COM_PROJECTS_HEAD_CONTRACT_DOC_STATUS_DESC"
                class="x2"
                default="0"
                >
            <option value="0">COM_PROJECTS_HEAD_CONTRACT_DOC_STATUS_0</option>
            <option value="2">COM_PROJECTS_HEAD_CONTRACT_DOC_STATUS_2</option>
            <option value="1">COM_PROJECTS_HEAD_CONTRACT_DOC_STATUS_1</option>
        </field>
        <field
                name="upload"
                type="file"
                label="COM_PROJECTS_ACTION_UPLOAD"
                description="COM_PROJECTS_ACTION_UPLOAD_DESC"
        />
        <field
                name="files"
                type="filelist"
                label="COM_PROJECTS_HEAD_CONTRACT_ADDFILE"
                description="COM_PROJECTS_HEAD_CONTRACT_ADDFILE_DESC"
                class="x2"
                hide_default="true"
                multiple="true"
                default=""
        />
    </fieldset>
    <fieldset name="catalog">
        <field
                name="info_catalog"
                type="radio"
                label="COM_PROJECTS_HEAD_CONTRACT_INFO_CATALOG"
                description="COM_PROJECTS_HEAD_CONTRACT_INFO_CATALOG_DESC"
                class="btn-group btn-group-yesno"
                default="0"
                >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="logo_catalog"
                type="radio"
                label="COM_PROJECTS_HEAD_CONTRACT_LOGO_CATALOG"
                description="COM_PROJECTS_HEAD_CONTRACT_LOGO_CATALOG_DESC"
                class="btn-group btn-group-yesno"
                default="0"
                >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="pvn_1"
                type="radio"
                label="COM_PROJECTS_HEAD_CONTRACT_PVN_1"
                description="COM_PROJECTS_HEAD_CONTRACT_PVN_1_DESC"
                class="btn-group btn-group-yesno"
                default="0"
                >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="pvn_1a"
                type="radio"
                label="COM_PROJECTS_HEAD_CONTRACT_PVN_1A"
                description="COM_PROJECTS_HEAD_CONTRACT_PVN_1A_DESC"
                class="btn-group btn-group-yesno"
                default="0"
                >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="pvn_1b"
                type="radio"
                label="COM_PROJECTS_HEAD_CONTRACT_PVN_1B"
                description="COM_PROJECTS_HEAD_CONTRACT_PVN_1B_DESC"
                class="btn-group btn-group-yesno"
                default="0"
                >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="pvn_1v"
                type="radio"
                label="COM_PROJECTS_HEAD_CONTRACT_PVN_1V"
                description="COM_PROJECTS_HEAD_CONTRACT_PVN_1V_DESC"
                class="btn-group btn-group-yesno"
                default="0"
                >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="pvn_1g"
                type="radio"
                label="COM_PROJECTS_HEAD_CONTRACT_PVN_1G"
                description="COM_PROJECTS_HEAD_CONTRACT_PVN_1G_DESC"
                class="btn-group btn-group-yesno"
                default="0"
                >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="no_exhibit"
                type="radio"
                label="COM_PROJECTS_HEAD_CONTRACT_NO_EXHIBIT"
                description="COM_PROJECTS_HEAD_CONTRACT_NO_EXHIBIT_DESC"
                class="btn-group btn-group-yesno"
                default="0"
                >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="info_arrival"
                type="radio"
                label="COM_PROJECTS_HEAD_CONTRACT_INFO_ARRIVAL"
                description="COM_PROJECTS_HEAD_CONTRACT_INFO_ARRIVAL_DESC"
                class="btn-group btn-group-yesno"
                default="0"
                >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="invite_date"
                type="calendar"
                label="COM_PROJECTS_FORM_CONTRACT_INVITE_DATE_LABEL"
                description="COM_PROJECTS_FORM_CONTRACT_INVITE_DATE_DESC"
                class="span12"
                format="%d.%m.%Y"
                filter="none"
                autocomplete="off"
        />
        <field
                name="invite_outgoing_number"
                type="text"
                label="COM_PROJECTS_FORM_CONTRACT_OUTGOING_NUMBER_LABEL"
                description="COM_PROJECTS_FORM_CONTRACT_OUTGOING_NUMBER_DESC"
                class="span12"
                autocomplete="off"
        />
        <field
                name="invite_incoming_number"
                type="text"
                label="COM_PROJECTS_FORM_CONTRACT_INCOMING_NUMBER_LABEL"
                description="COM_PROJECTS_FORM_CONTRACT_INCOMING_NUMBER_DESC"
                class="span12"
                autocomplete="off"
        />
    </fieldset>
    <fieldset name="settings">
        <field
                name="activecolumn"
                type="list"
                label="COM_PROJECTS_FILTER_COLUMN"
                description="COM_PROJECTS_FILTER_COLUMN_DESC"
                >
            <option value="1">COM_PROJECTS_HEAD_ITEM_COLUMN1_LABEL</option>
            <option value="2">COM_PROJECTS_HEAD_ITEM_COLUMN2_LABEL</option>
            <option value="3">COM_PROJECTS_HEAD_ITEM_COLUMN3_LABEL</option>
        </field>
    </fieldset>
</form>