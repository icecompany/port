<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_projects/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="title"
                type="text"
                label="COM_PROJECTS_HEAD_TITLE"
                description="COM_PROJECTS_HEAD_TITLE_DESC"
                hint="COM_PROJECTS_HEAD_TITLE_DESC"
                required="true"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="title_ru"
                type="text"
                label="COM_PROJECTS_HEAD_TITLE_RU"
                description="COM_PROJECTS_HEAD_TITLE_RU_DESC"
                hint="COM_PROJECTS_HEAD_TITLE_RU_DESC"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="title_en"
                type="text"
                label="COM_PROJECTS_HEAD_TITLE_EN"
                description="COM_PROJECTS_HEAD_TITLE_EN_DESC"
                hint="COM_PROJECTS_HEAD_TITLE_EN_DESC"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="date_start"
                type="calendar"
                label="COM_PROJECTS_HEAD_DATE_START"
                description="COM_PROJECTS_HEAD_DATE_START_DESC"
                hint="COM_PROJECTS_HEAD_DATE_START_DESC"
                autocomplete="off"
                required="true"
                class="input-xlarge"
        />
        <field
                name="date_end"
                type="calendar"
                label="COM_PROJECTS_HEAD_DATE_END"
                description="COM_PROJECTS_HEAD_DATE_END_DESC"
                hint="COM_PROJECTS_HEAD_DATE_END_DESC"
                autocomplete="off"
                required="true"
                class="input-xlarge"
        />
        <field
                name="state"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                class="inputbox"
                size="1"
                default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>
</form>