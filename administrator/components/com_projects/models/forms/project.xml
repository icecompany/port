<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_projects/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="title"
                type="text"
                label="COM_PROJECTS_HEAD_TITLE"
                description="COM_PROJECTS_HEAD_TITLE_DESC"
                hint="COM_PROJECTS_HEAD_TITLE_DESC"
                required="true"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="title_ru"
                type="text"
                label="COM_PROJECTS_HEAD_TITLE_RU"
                description="COM_PROJECTS_HEAD_TITLE_RU_DESC"
                hint="COM_PROJECTS_HEAD_TITLE_RU_DESC"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="title_en"
                type="text"
                label="COM_PROJECTS_HEAD_TITLE_EN"
                description="COM_PROJECTS_HEAD_TITLE_EN_DESC"
                hint="COM_PROJECTS_HEAD_TITLE_EN_DESC"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="managerID"
                type="user"
                label="COM_PROJECTS_HEAD_CONTRACT_GENERAL"
                description="COM_PROJECTS_HEAD_CONTRACT_GENERAL_DESC"
                hint="COM_PROJECTS_HEAD_CONTRACT_GENERAL_UNDEFINED"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="groupID"
                type="usergroup"
                label="COM_PROJECTS_HEAD_CONTRACT_PROJECT_GROUP"
                description="COM_PROJECTS_HEAD_CONTRACT_PROJECT_GROUP_DESC"
                autocomplete="off"
                class="input-xlarge"
                required="true"
        />
        <field
                name="columnID"
                type="list"
                label="COM_PROJECTS_FILTER_COLUMN"
                description="COM_PROJECTS_FILTER_COLUMN_DESC"
                default="1"
                class="input-xlarge">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
        </field>
        <field
                name="priceID"
                type="Price"
                label="COM_PROJECTS_FILTER_PRICE"
                description="COM_PROJECTS_FILTER_PRICE"
                required="true"
                class="input-xlarge"
        />
        <field
                name="catalogID"
                type="Cattitle"
                label="COM_PROJECTS_BLANK_CATTITLE"
                description="COM_PROJECTS_BLANK_CATTITLE"
                class="input-xlarge"
                required="true"
        />
        <field
                name="rubrics"
                type="Rubric"
                label="COM_PROJECTS_HEAD_THEMATIC_RUBRICS"
                description="COM_PROJECTS_HEAD_THEMATIC_RUBRICS_DESC"
                multiple="true"
                class="fullfield"
        />
        <field
                name="contract_prefix"
                type="text"
                label="COM_PROJECTS_HEAD_CONTRACT_PREFIX"
                description="COM_PROJECTS_HEAD_CONTRACT_PREFIX_DESC"
                hint="COM_PROJECTS_HEAD_CONTRACT_PREFIX_HINT"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="date_start"
                type="calendar"
                label="COM_PROJECTS_HEAD_DATE_START"
                description="COM_PROJECTS_HEAD_DATE_START_DESC"
                hint="COM_PROJECTS_HEAD_DATE_START_DESC"
                autocomplete="off"
                required="true"
                format="%d.%m.%Y"
                class="input-xlarge"
        />
        <field
                name="date_end"
                type="calendar"
                label="COM_PROJECTS_HEAD_DATE_END"
                description="COM_PROJECTS_HEAD_DATE_END_DESC"
                hint="COM_PROJECTS_HEAD_DATE_END_DESC"
                autocomplete="off"
                required="true"
                format="%d.%m.%Y"
                class="input-xlarge"
        />
    </fieldset>
</form>